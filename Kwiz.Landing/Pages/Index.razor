@page "/"

<PageTitle>XKwiz</PageTitle>

<div class="page-background"></div>
<div class="container d-flex align-items-center vh-100">
    <div class="w-100">
        <div class="row">
            <div class="col-md-8">
                <div class="logo-text">
                    <div class="x-text">X</div>
                    <div>Kwiz</div>
                </div>
                <p class="hero-text">
                    Quiz yaratish/ishlash bundan oson<br/>bo'lgan emas 🤩
                </p>
            </div>
            <div class="col-md-4">
                <img src="../images/checklist.png">
            </div>
        </div>

        <div class="row my-5">
            <div class="col-md-4 d-flex">
                <div class="quiz">
                    <span>670K</span>
                    <span>Ochiq Quizlar</span>
                </div>
            </div>

            <div class="col-md-4 d-flex">
                <div class="mx-auto quiz completed">
                    <span>1200K</span>
                    <span>Quizlar bajarildi</span>
                </div>
            </div>

            <div class="col-md-4 d-flex">
                <div class="ml-auto quiz topics">
                    <span>1200K</span>
                    <span>Mavzular</span>
                </div>
            </div>
        </div>

        <div class="row my-5">
            <div class="d-flex col-md-4 justify-content-center w-100">
                <p class="hero-info">Quiz yarating yoki bilimingizni sinang 🚀</p>
            </div>
            <div class="d-flex col-md-4 justify-content-center w-100">
                <button type="button" class="dashboard">Dashboard 🏠</button>
            </div>
        </div>
    </div>
</div>